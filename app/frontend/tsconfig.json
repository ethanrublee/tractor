{
  "compilerOptions": {
    "alwaysStrict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "lib",
    "target": "es5",
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "lib",
    "noEmitOnError": true,
    "jsx":"react",
    "types": [
      "node",
      "google-protobuf"
    ]
  },
  "include": ["src", "test", "genproto/farm_ng_proto/tractor/v1"],
  "exclude": [
    "node_modules"
  ]
}
